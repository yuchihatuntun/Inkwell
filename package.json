{
	"name": "astro-theme-thought-lite",
	"type": "module",
	"version": "0.24.0",
	"description": "A modern Astro theme focused on content creation",
	"keywords": [
		"astro",
		"theme",
		"blog",
		"svelte",
		"typescript",
		"i18n"
	],
	"homepage": "https://github.com/tuyuritio/astro-theme-thought-lite",
	"repository": {
		"type": "git",
		"url": "https://github.com/tuyuritio/astro-theme-thought-lite.git"
	},
	"bugs": {
		"url": "https://github.com/tuyuritio/astro-theme-thought-lite/issues"
	},
	"license": "GPL-3.0",
	"author": {
		"name": "tuyuritio",
		"url": "https://github.com/tuyuritio"
	},
	"scripts": {
		"new": "tsx --loader esm-loader-yaml scripts/new.ts",
		"dev": "astro dev",
		"check": "astro check",
		"build": "astro build",
		"preview": "astro preview",
		"format": "biome format --write",
		"lint": "biome lint",
		"count": "git log --pretty=tformat: --numstat | grep -v package | awk '{ A += $1; S += $2; T += $1 - $2 } END { printf \"+ %s\tLines\\n- %s\tLines\\n= %s\tLines\\n\", A, S, T }'",
		"prepare": "husky",
		"preinstall": "npx only-allow pnpm"
	},
	"dependencies": {
		"@astrojs/markdown-remark": "^6.3.8",
		"@astrojs/sitemap": "^3.6.0",
		"@astrojs/svelte": "^7.2.2",
		"@hbsnow/rehype-sectionize": "^1.0.7",
		"@iconify-json/fa6-brands": "^1.2.6",
		"@iconify-json/lucide": "^1.2.73",
		"@iconify-json/simple-icons": "^1.2.58",
		"@iconify-json/svg-spinners": "^1.2.4",
		"@swup/astro": "^1.7.0",
		"@unocss/transformer-directives": "^66.5.4",
		"@unocss/transformer-variant-group": "^66.5.4",
		"astro": "^5.15.4",
		"astro-icon": "^1.1.5",
		"feed": "^5.1.0",
		"hastscript": "^9.0.1",
		"luxon": "^3.7.2",
		"mdast-util-to-string": "^4.0.0",
		"medium-zoom": "^1.1.0",
		"ms": "^2.1.3",
		"reading-time": "^1.5.0",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-external-links": "^3.0.0",
		"rehype-figure": "^1.0.1",
		"rehype-katex": "^7.0.1",
		"remark-breaks": "^4.0.0",
		"remark-cjk-friendly": "^1.2.3",
		"remark-cjk-friendly-gfm-strikethrough": "^1.2.3",
		"remark-directive": "^4.0.0",
		"remark-extended-table": "^2.0.3",
		"remark-flexible-markers": "^1.3.2",
		"remark-footnotes-extra": "^0.3.0",
		"remark-gemoji": "^8.0.0",
		"remark-gfm": "^4.0.1",
		"remark-github-blockquote-alert": "^2.0.0",
		"remark-ins": "^1.2.2",
		"remark-math": "^6.0.0",
		"remark-ruby-directive": "^0.3.0",
		"shiki": "^3.15.0",
		"svelte": "^5.43.5",
		"typescript": "^5.9.3",
		"unified": "^11.0.5",
		"unist-builder": "^4.0.0",
		"unist-util-find-after": "^5.0.0",
		"unist-util-find-all-after": "^5.0.0",
		"unist-util-find-all-before": "^5.0.0",
		"unist-util-find-between-all": "^1.1.3",
		"unist-util-visit": "^5.0.0"
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.5",
		"@biomejs/biome": "2.3.4",
		"@clack/prompts": "^0.11.0",
		"@rollup/plugin-yaml": "^4.1.2",
		"@types/hast": "^3.0.4",
		"@types/luxon": "^3.7.1",
		"@types/mdast": "^4.0.4",
		"@unocss/reset": "^66.5.4",
		"esm-loader-yaml": "^1.0.2",
		"husky": "^9.1.7",
		"less": "^4.4.2",
		"lint-staged": "^16.2.6",
		"picocolors": "^1.1.1",
		"prettier": "3.6.2",
		"prettier-plugin-astro": "0.14.1",
		"prettier-plugin-svelte": "^3.4.0",
		"tsx": "^4.20.6",
		"unocss": "^66.5.4"
	},
	"lint-staged": {
		"*.{js,ts,json,jsonc,svelte,astro}": [
			"biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
		]
	}
}
