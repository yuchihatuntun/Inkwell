{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*", ".vscode/config.schema.json"],
	"exclude": ["dist"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"$config": ["site.config.ts"],
			"$utils/*": ["src/utils/*"],
			"$components/*": ["src/components/*"],
			"$i18n": ["src/i18n/index"],
			"$layouts/*": ["src/layouts/*"],
			"$styles/*": ["src/styles/*"]
		}
	}
}
